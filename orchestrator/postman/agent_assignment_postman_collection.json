          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/agents/{{agentId}}/tools/{{toolId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","agents","{{agentId}}","tools","{{toolId}}"]
        }
      }
    },
    {
